        header {
            background-color: white;
            border-bottom: 1px solid var(--border);
            padding: 0;
            margin-bottom: 0;
        }
        .header-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .logo-text {
            font-family: 'Montserrat', sans-serif;
            font-weight: 700;
            font-size: 1.5rem;
            color: var(--primary);
        }
        .logo-text span {
            color: var(--accent);
        }
        .user-menu {
            display: flex;
