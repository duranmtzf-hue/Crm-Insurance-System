                    </div>
                    <div class="form-group">
                        <label class="form-label" for="ticket_caseta">Ticket de Caseta</label>
                        <input type="text" id="ticket_caseta" name="ticket_caseta" class="form-control" placeholder="Número de ticket o referencia">
                    </div>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check"></i> Registrar Pago de Caseta
                    </button>
                </form>
            </div>

            <!-- Viáticos -->
            <div class="card">
                <div class="card-header">
                    <h2><i class="fas fa-receipt"></i> Viáticos</h2>
                </div>
                <form id="perDiemForm">
                    <div class="form-group">
                        <label class="form-label" for="perdiem_vehicle_id">Vehículo *</label>
                        <select id="perdiem_vehicle_id" name="vehicle_id" class="form-control" required>
                            <option value="">Seleccione un vehículo</option>
                            <% vehicles.forEach(function(vehicle) { %>
                            <option value="<%= vehicle.id %>">#<%= vehicle.numero_vehiculo %> - <%= vehicle.marca %> <%= vehicle.modelo %></option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="perdiem_fecha">Fecha *</label>
                        <input type="date" id="perdiem_fecha" name="fecha" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="concepto">Concepto *</label>
                        <input type="text" id="concepto" name="concepto" class="form-control" required placeholder="Ej: Alimentos, Hospedaje, etc.">
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="perdiem_monto">Monto *</label>
                        <input type="number" step="0.01" id="perdiem_monto" name="monto" class="form-control" required placeholder="Ej: 500.00">
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="perdiem_kilometraje">Kilometraje</label>
                        <input type="number" id="perdiem_kilometraje" name="kilometraje" class="form-control" placeholder="Ej: 45230">
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="perdiem_descripcion">Descripción</label>
                        <textarea id="perdiem_descripcion" name="descripcion" class="form-control" rows="2" placeholder="Detalles del viático"></textarea>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="comprobante">Comprobante</label>
                        <input type="text" id="comprobante" name="comprobante" class="form-control" placeholder="Número de comprobante o referencia">
                    </div>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check"></i> Registrar Viático
                    </button>
                </form>
            </div>

            <!-- Otros Gastos Variables -->
            <div class="card">
                <div class="card-header">
                    <h2><i class="fas fa-list"></i> Otros Gastos Variables</h2>
                </div>
                <form id="variableExpenseForm">
                    <div class="form-group">
                        <label class="form-label" for="variable_vehicle_id">Vehículo *</label>
                        <select id="variable_vehicle_id" name="vehicle_id" class="form-control" required>
                            <option value="">Seleccione un vehículo</option>
                            <% vehicles.forEach(function(vehicle) { %>
                            <option value="<%= vehicle.id %>">#<%= vehicle.numero_vehiculo %> - <%= vehicle.marca %> <%= vehicle.modelo %></option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="variable_fecha">Fecha *</label>
                        <input type="date" id="variable_fecha" name="fecha" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="variable_concepto">Concepto *</label>
                        <input type="text" id="variable_concepto" name="concepto" class="form-control" required placeholder="Ej: Estacionamiento, Lavado, etc.">
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="variable_monto">Monto *</label>
                        <input type="number" step="0.01" id="variable_monto" name="monto" class="form-control" required placeholder="Ej: 200.00">
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="categoria">Categoría</label>
                        <select id="categoria" name="categoria" class="form-control">
                            <option value="Otros">Otros</option>
                            <option value="Casetas">Casetas</option>
                            <option value="Viáticos">Viáticos</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="variable_kilometraje">Kilometraje</label>
                        <input type="number" id="variable_kilometraje" name="kilometraje" class="form-control" placeholder="Ej: 45230">
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="variable_descripcion">Descripción</label>
                        <textarea id="variable_descripcion" name="descripcion" class="form-control" rows="2" placeholder="Detalles del gasto"></textarea>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="variable_comprobante">Comprobante</label>
                        <input type="text" id="variable_comprobante" name="comprobante" class="form-control" placeholder="Número de comprobante o referencia">
                    </div>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check"></i> Registrar Gasto Variable
                    </button>
                </form>
            </div>
        </div>
    </div>

    <script>
        // Set today's date as default for date inputs
        const today = new Date().toISOString().split('T')[0];
        document.querySelectorAll('input[type="date"]').forEach(input => {
            if (!input.value) {
                input.value = today;
            }
        });

        // Tab functionality
        function showTab(tabName) {
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.remove('active');
            });
            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            document.getElementById(tabName).classList.add('active');
            event.target.classList.add('active');
        }

        // Helper: enviar formulario de gastos a la API (rutas excluidas del SW para evitar "sin conexión")
        async function submitExpenseForm(url, data, successMsg) {
            const response = await fetch(url, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data),
                credentials: 'same-origin'
            });
            if (response.status === 401 || response.status === 403) {
                window.location.href = '/login';
                return { redirect: true };
            }
            const contentType = response.headers.get('Content-Type') || '';
            if (!contentType.includes('application/json')) {
                throw new Error('Error del servidor. Intenta de nuevo en unos segundos.');
            }
            const result = await response.json();
            if (result.success) return { ok: true, message: successMsg };
            return { ok: false, message: result.error || 'Error desconocido' };
        }

        // Operator Salary Form
        document.getElementById('operatorSalaryForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData);
            const btn = e.target.querySelector('button[type="submit"]');
            const originalText = btn.innerHTML;
            try {
                btn.disabled = true;
                btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Guardando...';
                const out = await submitExpenseForm('/api/operator-salary', data, 'Sueldo de operador registrado correctamente');
                if (out.redirect) return;
                if (out.ok) {
                    alert(out.message);
                    e.target.reset();
                } else {
                    alert('Error: ' + out.message);
                }
            } catch (error) {
                alert(error.message || 'Error de conexión. Verifica tu internet e intenta de nuevo.');
            } finally {
                btn.disabled = false;
                btn.innerHTML = originalText;
            }
        });

        // Toll Payment Form
        document.getElementById('tollPaymentForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData);
            const btn = e.target.querySelector('button[type="submit"]');
            const originalText = btn.innerHTML;
            try {
                btn.disabled = true;
                btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Guardando...';
                const out = await submitExpenseForm('/api/toll-payment', data, 'Pago de caseta registrado correctamente');
                if (out.redirect) return;
                if (out.ok) {
                    alert(out.message);
                    e.target.reset();
                    document.getElementById('toll_fecha').value = today;
                } else {
                    alert('Error: ' + out.message);
                }
            } catch (error) {
                alert(error.message || 'Error de conexión. Verifica tu internet e intenta de nuevo.');
            } finally {
                btn.disabled = false;
                btn.innerHTML = originalText;
            }
        });

        // Per Diem Form
        document.getElementById('perDiemForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData);
            const btn = e.target.querySelector('button[type="submit"]');
            const originalText = btn.innerHTML;
            try {
                btn.disabled = true;
                btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Guardando...';
                const out = await submitExpenseForm('/api/per-diem', data, 'Viático registrado correctamente');
                if (out.redirect) return;
                if (out.ok) {
                    alert(out.message);
                    e.target.reset();
                    document.getElementById('perdiem_fecha').value = today;
                } else {
                    alert('Error: ' + out.message);
                }
            } catch (error) {
                alert(error.message || 'Error de conexión. Verifica tu internet e intenta de nuevo.');
            } finally {
                btn.disabled = false;
                btn.innerHTML = originalText;
            }
        });

        // Variable Expense Form
        document.getElementById('variableExpenseForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData);
            const btn = e.target.querySelector('button[type="submit"]');
            const originalText = btn.innerHTML;
            try {
                btn.disabled = true;
                btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Guardando...';
                const out = await submitExpenseForm('/api/variable-expense', data, 'Gasto variable registrado correctamente');
                if (out.redirect) return;
                if (out.ok) {
                    alert(out.message);
                    e.target.reset();
                    document.getElementById('variable_fecha').value = today;
                } else {
                    alert('Error: ' + out.message);
                }
            } catch (error) {
                alert(error.message || 'Error de conexión. Verifica tu internet e intenta de nuevo.');
            } finally {
                btn.disabled = false;
                btn.innerHTML = originalText;
            }
        });

        // Charts
        <% if (expenseSummary.categoryBreakdown) { %>
        // Category Distribution Chart
        const categoryCtx = document.getElementById('categoryChart');
        if (categoryCtx) {
            const categoryData = {
                labels: ['Combustible', 'Llantas', 'Mantenimiento', 'Pólizas', 'Sueldos', 'Casetas', 'Viáticos', 'Variables'],
                datasets: [{
                    data: [
                        <%= expenseSummary.categoryBreakdown.fuel || 0 %>,
                        <%= expenseSummary.categoryBreakdown.tires || 0 %>,
                        <%= expenseSummary.categoryBreakdown.maintenance || 0 %>,
                        <%= expenseSummary.categoryBreakdown.policies || 0 %>,
                        <%= expenseSummary.categoryBreakdown.salaries || 0 %>,
                        <%= expenseSummary.categoryBreakdown.tolls || 0 %>,
                        <%= expenseSummary.categoryBreakdown.perDiem || 0 %>,
                        <%= expenseSummary.categoryBreakdown.variable || 0 %>
                    ],
                    backgroundColor: [
                        '#ff9800',
                        '#607d8b',
                        '#9c27b0',
                        '#2196f3',
                        '#667eea',
                        '#f5576c',
                        '#4facfe',
                        '#28a745'
                    ],
                    borderWidth: 2,
                    borderColor: '#fff'
                }]
            };
            new Chart(categoryCtx, {
                type: 'doughnut',
                data: categoryData,
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                padding: 15,
                                font: { size: 12 }
                            }
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    const label = context.label || '';
                                    const value = context.parsed || 0;
                                    const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                    const percentage = total > 0 ? ((value / total) * 100).toFixed(1) : 0;
                                    return label + ': $' + value.toLocaleString('es-MX', {minimumFractionDigits: 2}) + ' (' + percentage + '%)';
                                }
                            }
                        }
                    }
                }
            });
        }
        <% } %>

        // Fixed vs Variable Chart
        const fixedVariableCtx = document.getElementById('fixedVariableChart');
        if (fixedVariableCtx) {
            new Chart(fixedVariableCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Costos Fijos', 'Costos Variables'],
                    datasets: [{
                        data: [<%= expenseSummary.totalFixed || 0 %>, <%= expenseSummary.totalVariable || 0 %>],
                        backgroundColor: ['#667eea', '#f5576c'],
                        borderWidth: 3,
                        borderColor: '#fff'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                padding: 15,
                                font: { size: 14, weight: 'bold' }
                            }
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    const label = context.label || '';
                                    const value = context.parsed || 0;
                                    const total = <%= expenseSummary.totalExpenses || 0 %>;
                                    const percentage = total > 0 ? ((value / total) * 100).toFixed(1) : 0;
                                    return label + ': $' + value.toLocaleString('es-MX', {minimumFractionDigits: 2}) + ' (' + percentage + '%)';
                                }
                            }
                        }
                    }
                }
            });
        }

        <% if (expenseSummary.monthlyTrends && expenseSummary.monthlyTrends.length > 0) { %>
        // Monthly Trends Chart
        const monthlyTrendsCtx = document.getElementById('monthlyTrendsChart');
        if (monthlyTrendsCtx) {
            const monthlyLabels = [<% expenseSummary.monthlyTrends.forEach(function(trend, index) { %>'<%= trend.month %>'<%= index < expenseSummary.monthlyTrends.length - 1 ? ',' : '' %><% }); %>];
            new Chart(monthlyTrendsCtx, {
                type: 'line',
                data: {
                    labels: monthlyLabels,
                    datasets: [
                        {
                            label: 'Costos Fijos',
                            data: [<% expenseSummary.monthlyTrends.forEach(function(trend, index) { %><%= trend.fixed || 0 %><%= index < expenseSummary.monthlyTrends.length - 1 ? ',' : '' %><% }); %>],
                            borderColor: '#667eea',
                            backgroundColor: 'rgba(102, 126, 234, 0.1)',
                            borderWidth: 3,
                            fill: true,
                            tension: 0.4
                        },
                        {
                            label: 'Costos Variables',
                            data: [<% expenseSummary.monthlyTrends.forEach(function(trend, index) { %><%= trend.variable || 0 %><%= index < expenseSummary.monthlyTrends.length - 1 ? ',' : '' %><% }); %>],
                            borderColor: '#f5576c',
                            backgroundColor: 'rgba(245, 87, 108, 0.1)',
                            borderWidth: 3,
                            fill: true,
                            tension: 0.4
                        },
                        {
                            label: 'Total',
                            data: [<% expenseSummary.monthlyTrends.forEach(function(trend, index) { %><%= trend.total || 0 %><%= index < expenseSummary.monthlyTrends.length - 1 ? ',' : '' %><% }); %>],
                            borderColor: '#4facfe',
                            backgroundColor: 'rgba(79, 172, 254, 0.1)',
                            borderWidth: 3,
                            fill: true,
                            tension: 0.4,
                            borderDash: [5, 5]
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: {
                            position: 'top',
                            labels: {
                                padding: 15,
                                font: { size: 12 }
                            }
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return context.dataset.label + ': $' + context.parsed.y.toLocaleString('es-MX', {minimumFractionDigits: 2});
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) {
                                    return '$' + value.toLocaleString('es-MX');
                                }
                            }
                        }
                    }
                }
            });
        }
        <% } %>

        <% if (expenseSummary.byVehicle && expenseSummary.byVehicle.length > 0) { %>
        // Vehicle Comparison Chart
        const vehicleComparisonCtx = document.getElementById('vehicleComparisonChart');
        if (vehicleComparisonCtx) {
            const vehicleLabels = [<% expenseSummary.byVehicle.forEach(function(v, index) { %>'#<%= v.numero_vehiculo %>'<%= index < expenseSummary.byVehicle.length - 1 ? ',' : '' %><% }); %>];
            new Chart(vehicleComparisonCtx, {
                type: 'bar',
                data: {
                    labels: vehicleLabels,
                    datasets: [
                        {
                            label: 'Costos Fijos',
                            data: [<% expenseSummary.byVehicle.forEach(function(v, index) { %><%= v.fixed || 0 %><%= index < expenseSummary.byVehicle.length - 1 ? ',' : '' %><% }); %>],
                            backgroundColor: '#667eea',
                            borderColor: '#667eea',
                            borderWidth: 1
                        },
                        {
                            label: 'Costos Variables',
                            data: [<% expenseSummary.byVehicle.forEach(function(v, index) { %><%= v.variable || 0 %><%= index < expenseSummary.byVehicle.length - 1 ? ',' : '' %><% }); %>],
                            backgroundColor: '#f5576c',
                            borderColor: '#f5576c',
                            borderWidth: 1
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: {
                            position: 'top',
                            labels: {
                                padding: 15,
                                font: { size: 12 }
                            }
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return context.dataset.label + ': $' + context.parsed.y.toLocaleString('es-MX', {minimumFractionDigits: 2});
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) {
                                    return '$' + value.toLocaleString('es-MX');
                                }
                            }
                        }
                    }
                }
            });
        }
        <% } %>
    </script>
</body>
</html>

