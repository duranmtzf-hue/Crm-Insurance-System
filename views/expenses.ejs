<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Gastos | CRM Insurance System</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&family=Open+Sans:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #001f3f;
            --secondary: #87ceeb;
            --accent: #4da6ff;
            --light: #f8f9fa;
            --dark: #212529;
            --gray: #6c757d;
            --border: #dee2e6;
            --shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
            --success: #28a745;
            --warning: #ffc107;
            --danger: #dc3545;
        }
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: 'Open Sans', sans-serif;
            background-color: #f5f7fa;
            color: var(--dark);
            line-height: 1.6;
        }
        header {
            background-color: white;
            border-bottom: 1px solid var(--border);
            padding: 0;
        }
        .header-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .logo {
            display: flex;
            align-items: center;
            gap: 12px;
        }
        .logo-text {
            font-family: 'Montserrat', sans-serif;
            font-weight: 700;
            font-size: 1.5rem;
            color: var(--primary);
        }
        nav {
            display: flex;
            gap: 20px;
        }
        nav a {
            text-decoration: none;
            color: var(--dark);
            font-weight: 500;
            padding: 8px 16px;
            border-radius: 4px;
            transition: all 0.3s;
        }
        nav a:hover, nav a.active {
            background-color: var(--primary);
            color: white;
        }
        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 30px 20px;
        }
        .page-header {
            margin-bottom: 30px;
        }
        .page-header h1 {
            font-family: 'Montserrat', sans-serif;
            font-size: 2rem;
            color: var(--primary);
            margin-bottom: 10px;
        }
        .page-header p {
            color: var(--gray);
        }
        .tabs {
            display: flex;
            gap: 10px;
            margin-bottom: 30px;
            border-bottom: 2px solid var(--border);
            padding-bottom: 0;
        }
        .tab-btn {
            padding: 12px 24px;
            background: none;
            border: none;
            border-bottom: 3px solid transparent;
            cursor: pointer;
            font-size: 1rem;
            color: var(--gray);
            transition: all 0.3s;
            font-weight: 500;
        }
        .tab-btn:hover {
            color: var(--primary);
        }
        .tab-btn.active {
            color: var(--primary);
            border-bottom-color: var(--primary);
        }
        .tab-content {
            display: none;
        }
        .tab-content.active {
            display: block;
        }
        .card {
            background: white;
            border-radius: 8px;
            padding: 25px;
            margin-bottom: 25px;
            box-shadow: var(--shadow);
        }
        .card-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 1px solid var(--border);
        }
        .card-header h2 {
            font-family: 'Montserrat', sans-serif;
            font-size: 1.5rem;
            color: var(--primary);
        }
        .form-group {
            margin-bottom: 20px;
        }
        .form-label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
            color: var(--dark);
        }
        .form-control {
            width: 100%;
            padding: 10px 15px;
            border: 1px solid var(--border);
            border-radius: 4px;
            font-size: 1rem;
            transition: border-color 0.3s;
        }
        .form-control:focus {
            outline: none;
            border-color: var(--primary);
        }
        .btn {
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 1rem;
            font-weight: 500;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }
        .btn-primary {
            background-color: var(--primary);
            color: white;
        }
        .btn-primary:hover {
            background-color: #002d5a;
        }
        .btn-success {
            background-color: var(--success);
            color: white;
        }
        .btn-success:hover {
            background-color: #218838;
        }
        .info-box {
            background: var(--light);
            padding: 15px;
            border-radius: 4px;
            margin-bottom: 20px;
            border-left: 4px solid var(--primary);
        }
        .info-box h3 {
            font-size: 1.1rem;
            margin-bottom: 10px;
            color: var(--primary);
        }
        .info-box ul {
            margin-left: 20px;
            color: var(--gray);
        }
        .info-box li {
            margin-bottom: 5px;
        }
    </style>
</head>
<body>
    <header>
        <div class="header-container">
            <div class="logo">
                <div class="logo-text">CRM <span>Insurance</span></div>
            </div>
            <nav>
                <a href="/dashboard"><i class="fas fa-home"></i> Dashboard</a>
                <a href="/vehicles"><i class="fas fa-car"></i> Vehículos</a>
                <a href="/expenses" class="active"><i class="fas fa-dollar-sign"></i> Gastos</a>
                <a href="/reports"><i class="fas fa-chart-bar"></i> Reportes</a>
                <a href="/logout"><i class="fas fa-sign-out-alt"></i> Salir</a>
            </nav>
        </div>
    </header>

    <div class="container">
        <div class="page-header">
            <h1><i class="fas fa-dollar-sign"></i> Gestión de Gastos</h1>
            <p>Registra costos fijos y variables para calcular el costo por kilómetro</p>
        </div>

        <div class="info-box">
            <h3><i class="fas fa-info-circle"></i> Clasificación de Gastos</h3>
            <ul>
                <li><strong>Costos Fijos:</strong> Combustible, Llantas, Mantenimientos, Pólizas, Sueldo de Operador</li>
                <li><strong>Costos Variables:</strong> Pago de Casetas, Viáticos, Otros Gastos Variables</li>
            </ul>
        </div>

        <div class="tabs">
            <button class="tab-btn active" onclick="showTab('fixed')">
                <i class="fas fa-lock"></i> Costos Fijos
            </button>
            <button class="tab-btn" onclick="showTab('variable')">
                <i class="fas fa-chart-line"></i> Costos Variables
            </button>
        </div>

        <!-- Tab: Costos Fijos -->
        <div id="fixed" class="tab-content active">
            <!-- Sueldo de Operador -->
            <div class="card">
                <div class="card-header">
                    <h2><i class="fas fa-user-tie"></i> Sueldo de Operador</h2>
                </div>
                <form id="operatorSalaryForm">
                    <div class="form-group">
                        <label class="form-label" for="salary_vehicle_id">Vehículo *</label>
                        <select id="salary_vehicle_id" name="vehicle_id" class="form-control" required>
                            <option value="">Seleccione un vehículo</option>
                            <% vehicles.forEach(function(vehicle) { %>
                            <option value="<%= vehicle.id %>">#<%= vehicle.numero_vehiculo %> - <%= vehicle.marca %> <%= vehicle.modelo %></option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="operator_id">Operador</label>
                        <select id="operator_id" name="operator_id" class="form-control">
                            <option value="">Seleccione un operador (opcional)</option>
                            <% operators.forEach(function(operator) { %>
                            <option value="<%= operator.id %>"><%= operator.nombre %></option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="periodo_inicio">Período Inicio *</label>
                        <input type="date" id="periodo_inicio" name="periodo_inicio" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="periodo_fin">Período Fin</label>
                        <input type="date" id="periodo_fin" name="periodo_fin" class="form-control">
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="sueldo_mensual">Sueldo Mensual *</label>
                        <input type="number" step="0.01" id="sueldo_mensual" name="sueldo_mensual" class="form-control" required placeholder="Ej: 15000.00">
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="tipo_periodo">Tipo de Período</label>
                        <select id="tipo_periodo" name="tipo_periodo" class="form-control">
                            <option value="Mensual">Mensual</option>
                            <option value="Anual">Anual</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="salary_descripcion">Descripción</label>
                        <textarea id="salary_descripcion" name="descripcion" class="form-control" rows="3" placeholder="Notas adicionales"></textarea>
                    </div>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check"></i> Registrar Sueldo
                    </button>
                </form>
            </div>
        </div>

        <!-- Tab: Costos Variables -->
        <div id="variable" class="tab-content">
            <!-- Pago de Casetas -->
            <div class="card">
                <div class="card-header">
                    <h2><i class="fas fa-road"></i> Pago de Casetas</h2>
                </div>
                <form id="tollPaymentForm">
                    <div class="form-group">
                        <label class="form-label" for="toll_vehicle_id">Vehículo *</label>
                        <select id="toll_vehicle_id" name="vehicle_id" class="form-control" required>
                            <option value="">Seleccione un vehículo</option>
                            <% vehicles.forEach(function(vehicle) { %>
                            <option value="<%= vehicle.id %>">#<%= vehicle.numero_vehiculo %> - <%= vehicle.marca %> <%= vehicle.modelo %></option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="toll_fecha">Fecha *</label>
                        <input type="date" id="toll_fecha" name="fecha" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="caseta">Caseta *</label>
                        <input type="text" id="caseta" name="caseta" class="form-control" required placeholder="Ej: Caseta México-Puebla">
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="ubicacion">Ubicación</label>
                        <input type="text" id="ubicacion" name="ubicacion" class="form-control" placeholder="Ej: Km 45 Autopista México-Puebla">
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="toll_monto">Monto *</label>
                        <input type="number" step="0.01" id="toll_monto" name="monto" class="form-control" required placeholder="Ej: 150.00">
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="toll_kilometraje">Kilometraje</label>
                        <input type="number" id="toll_kilometraje" name="kilometraje" class="form-control" placeholder="Ej: 45230">
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="toll_descripcion">Descripción</label>
                        <textarea id="toll_descripcion" name="descripcion" class="form-control" rows="2" placeholder="Notas adicionales"></textarea>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="ticket_caseta">Ticket de Caseta</label>
                        <input type="text" id="ticket_caseta" name="ticket_caseta" class="form-control" placeholder="Número de ticket o referencia">
                    </div>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check"></i> Registrar Pago de Caseta
                    </button>
                </form>
            </div>

            <!-- Viáticos -->
            <div class="card">
                <div class="card-header">
                    <h2><i class="fas fa-receipt"></i> Viáticos</h2>
                </div>
                <form id="perDiemForm">
                    <div class="form-group">
                        <label class="form-label" for="perdiem_vehicle_id">Vehículo *</label>
                        <select id="perdiem_vehicle_id" name="vehicle_id" class="form-control" required>
                            <option value="">Seleccione un vehículo</option>
                            <% vehicles.forEach(function(vehicle) { %>
                            <option value="<%= vehicle.id %>">#<%= vehicle.numero_vehiculo %> - <%= vehicle.marca %> <%= vehicle.modelo %></option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="perdiem_fecha">Fecha *</label>
                        <input type="date" id="perdiem_fecha" name="fecha" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="concepto">Concepto *</label>
                        <input type="text" id="concepto" name="concepto" class="form-control" required placeholder="Ej: Alimentos, Hospedaje, etc.">
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="perdiem_monto">Monto *</label>
                        <input type="number" step="0.01" id="perdiem_monto" name="monto" class="form-control" required placeholder="Ej: 500.00">
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="perdiem_kilometraje">Kilometraje</label>
                        <input type="number" id="perdiem_kilometraje" name="kilometraje" class="form-control" placeholder="Ej: 45230">
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="perdiem_descripcion">Descripción</label>
                        <textarea id="perdiem_descripcion" name="descripcion" class="form-control" rows="2" placeholder="Detalles del viático"></textarea>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="comprobante">Comprobante</label>
                        <input type="text" id="comprobante" name="comprobante" class="form-control" placeholder="Número de comprobante o referencia">
                    </div>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check"></i> Registrar Viático
                    </button>
                </form>
            </div>

            <!-- Otros Gastos Variables -->
            <div class="card">
                <div class="card-header">
                    <h2><i class="fas fa-list"></i> Otros Gastos Variables</h2>
                </div>
                <form id="variableExpenseForm">
                    <div class="form-group">
                        <label class="form-label" for="variable_vehicle_id">Vehículo *</label>
                        <select id="variable_vehicle_id" name="vehicle_id" class="form-control" required>
                            <option value="">Seleccione un vehículo</option>
                            <% vehicles.forEach(function(vehicle) { %>
                            <option value="<%= vehicle.id %>">#<%= vehicle.numero_vehiculo %> - <%= vehicle.marca %> <%= vehicle.modelo %></option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="variable_fecha">Fecha *</label>
                        <input type="date" id="variable_fecha" name="fecha" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="variable_concepto">Concepto *</label>
                        <input type="text" id="variable_concepto" name="concepto" class="form-control" required placeholder="Ej: Estacionamiento, Lavado, etc.">
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="variable_monto">Monto *</label>
                        <input type="number" step="0.01" id="variable_monto" name="monto" class="form-control" required placeholder="Ej: 200.00">
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="categoria">Categoría</label>
                        <select id="categoria" name="categoria" class="form-control">
                            <option value="Otros">Otros</option>
                            <option value="Casetas">Casetas</option>
                            <option value="Viáticos">Viáticos</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="variable_kilometraje">Kilometraje</label>
                        <input type="number" id="variable_kilometraje" name="kilometraje" class="form-control" placeholder="Ej: 45230">
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="variable_descripcion">Descripción</label>
                        <textarea id="variable_descripcion" name="descripcion" class="form-control" rows="2" placeholder="Detalles del gasto"></textarea>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="variable_comprobante">Comprobante</label>
                        <input type="text" id="variable_comprobante" name="comprobante" class="form-control" placeholder="Número de comprobante o referencia">
                    </div>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check"></i> Registrar Gasto Variable
                    </button>
                </form>
            </div>
        </div>
    </div>

    <script>
        // Set today's date as default for date inputs
        const today = new Date().toISOString().split('T')[0];
        document.querySelectorAll('input[type="date"]').forEach(input => {
            if (!input.value) {
                input.value = today;
            }
        });

        // Tab functionality
        function showTab(tabName) {
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.remove('active');
            });
            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            document.getElementById(tabName).classList.add('active');
            event.target.classList.add('active');
        }

        // Operator Salary Form
        document.getElementById('operatorSalaryForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData);
            
            try {
                const response = await fetch('/api/operator-salary', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                const result = await response.json();
                if (result.success) {
                    alert('Sueldo de operador registrado correctamente');
                    e.target.reset();
                } else {
                    alert('Error: ' + (result.error || 'Error desconocido'));
                }
            } catch (error) {
                alert('Error al registrar sueldo: ' + error.message);
            }
        });

        // Toll Payment Form
        document.getElementById('tollPaymentForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData);
            
            try {
                const response = await fetch('/api/toll-payment', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                const result = await response.json();
                if (result.success) {
                    alert('Pago de caseta registrado correctamente');
                    e.target.reset();
                    document.getElementById('toll_fecha').value = today;
                } else {
                    alert('Error: ' + (result.error || 'Error desconocido'));
                }
            } catch (error) {
                alert('Error al registrar pago de caseta: ' + error.message);
            }
        });

        // Per Diem Form
        document.getElementById('perDiemForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData);
            
            try {
                const response = await fetch('/api/per-diem', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                const result = await response.json();
                if (result.success) {
                    alert('Viático registrado correctamente');
                    e.target.reset();
                    document.getElementById('perdiem_fecha').value = today;
                } else {
                    alert('Error: ' + (result.error || 'Error desconocido'));
                }
            } catch (error) {
                alert('Error al registrar viático: ' + error.message);
            }
        });

        // Variable Expense Form
        document.getElementById('variableExpenseForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData);
            
            try {
                const response = await fetch('/api/variable-expense', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                const result = await response.json();
                if (result.success) {
                    alert('Gasto variable registrado correctamente');
                    e.target.reset();
                    document.getElementById('variable_fecha').value = today;
                } else {
                    alert('Error: ' + (result.error || 'Error desconocido'));
                }
            } catch (error) {
                alert('Error al registrar gasto variable: ' + error.message);
            }
        });
    </script>
</body>
</html>

