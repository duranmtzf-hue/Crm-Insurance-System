        </div>
    </div>


    <script>
        // Cerrar modales al hacer click fuera
        window.onclick = function(event) {
            const fuelModal = document.getElementById('fuelModal');
            const maintenanceModal = document.getElementById('maintenanceModal');
            const policyModal = document.getElementById('policyModal');
            const tireModal = document.getElementById('tireModal');
            if (event.target == fuelModal) {
                fuelModal.style.display = 'none';
            }
            if (event.target == maintenanceModal) {
                maintenanceModal.style.display = 'none';
            }
            if (event.target == policyModal) {
                policyModal.style.display = 'none';
            }
            if (event.target == tireModal) {
                tireModal.style.display = 'none';
            }
        }

        // Funciones para adjuntos del vehículo
        const vehicleId = <%= vehicle.id %>;

        async function loadAttachments() {
            try {
                const response = await fetch('/api/attachments/vehicle/' + vehicleId);
                const data = await response.json();
                
                const container = document.getElementById('attachmentsList');
                if (data.success && data.attachments.length > 0) {
                    container.innerHTML = data.attachments.map(function(att) {
                        return '<div class="attachment-item" style="display: flex; justify-content: space-between; align-items: center; padding: 12px; border: 1px solid var(--border); border-radius: 6px; margin-bottom: 10px;"><div style="flex: 1;"><div style="font-weight: 600; margin-bottom: 4px;"><i class="fas fa-file"></i> ' + att.nombre_original + '</div><div style="font-size: 0.85rem; color: var(--gray);">' + (att.tamano / 1024).toFixed(2) + ' KB • ' + (att.categoria || 'otro') + ' • ' + new Date(att.created_at).toLocaleDateString('es-ES') + '</div></div><div style="display: flex; gap: 8px;"><a href="/api/attachments/' + att.id + '/download" class="btn" style="padding: 6px 12px; font-size: 0.85rem;"><i class="fas fa-download"></i></a><button onclick="deleteAttachment(' + att.id + ')" class="btn btn-danger" style="padding: 6px 12px; font-size: 0.85rem;"><i class="fas fa-trash"></i></button></div></div>';
                    }).join('');
                } else {
                    container.innerHTML = '<p class="text-muted">No hay adjuntos aún</p>';
                }
            } catch (error) {
                console.error('Error cargando adjuntos:', error);
                document.getElementById('attachmentsList').innerHTML = '<p class="text-muted">Error al cargar adjuntos</p>';
            }
        }

        async function deleteAttachment(attachmentId) {
            if (!confirm('¿Estás seguro de eliminar este adjunto?')) return;
            
            try {
                const response = await fetch(`/api/attachments/${attachmentId}`, {
                    method: 'DELETE'
                });
                
                if (response.ok) {
                    loadAttachments();
                } else {
                    alert('Error al eliminar adjunto');
                }
            } catch (error) {
                console.error('Error eliminando adjunto:', error);
                alert('Error al eliminar adjunto');
            }
        }

        // Cargar adjuntos al iniciar
        document.addEventListener('DOMContentLoaded', function() {
            loadAttachments();

            // Manejar subida de archivos
            var uploadForm = document.getElementById('uploadAttachmentForm');
            if (uploadForm) {
                uploadForm.addEventListener('submit', async function(e) {
                    e.preventDefault();
                    
                    const formData = new FormData();
                    const fileInput = document.getElementById('attachmentFile');
                    const descripcion = document.getElementById('attachmentDescription').value;
                    const categoria = document.getElementById('attachmentCategory').value;
                    
                    if (!fileInput.files[0]) {
                        alert('Por favor selecciona un archivo');
                        return;
                    }
                    
                    formData.append('file', fileInput.files[0]);
                    formData.append('entity_type', 'vehicle');
                    formData.append('entity_id', vehicleId);
                    formData.append('descripcion', descripcion);
                    formData.append('categoria', categoria);
                    
                    try {
                        const response = await fetch('/api/attachments', {
                            method: 'POST',
                            body: formData
                        });
                        
                        const data = await response.json();
                        
                        if (data.success) {
                            alert('Archivo subido exitosamente');
                            document.getElementById('uploadAttachmentForm').reset();
                            loadAttachments();
                        } else {
                            alert('Error: ' + (data.error || 'Error al subir archivo'));
                        }
                    } catch (error) {
                        console.error('Error subiendo archivo:', error);
                        alert('Error al subir archivo');
                    }
                });
            }
        });

        document.getElementById('fuelForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            const formData = new FormData(this);
            const data = Object.fromEntries(formData);
            
            // Convertir números
            data.litros = parseFloat(data.litros);
            data.precio_litro = parseFloat(data.precio_litro);
            if (data.kilometraje) data.kilometraje = parseInt(data.kilometraje);
            
            try {
                const response = await fetch('/api/fuel', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                
                if (response.ok) {
                    alert('Registro de combustible agregado exitosamente');
                    window.location.reload();
                } else {
                    const error = await response.json();
                    alert('Error: ' + (error.error || 'Error al agregar registro'));
                }
            } catch (error) {
                alert('Error al conectar con el servidor');
            }
        });

        document.getElementById('maintenanceForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            const formData = new FormData(this);
            const data = Object.fromEntries(formData);
            
            // Convertir números
            if (data.kilometraje) data.kilometraje = parseInt(data.kilometraje);
            if (data.costo) data.costo = parseFloat(data.costo);
            if (data.proximo_mantenimiento_km) data.proximo_mantenimiento_km = parseInt(data.proximo_mantenimiento_km);
            
            try {
                const response = await fetch('/api/maintenance', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                
                if (response.ok) {
                    alert('Mantenimiento registrado exitosamente');
                    window.location.reload();
                } else {
                    const error = await response.json();
                    alert('Error: ' + (error.error || 'Error al registrar mantenimiento'));
                }
            } catch (error) {
                alert('Error al conectar con el servidor');
            }
        });

        // Formulario de póliza
        document.getElementById('policyForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            const formData = new FormData(this);
            const data = Object.fromEntries(formData);
            
            // Convertir números
            if (data.costo_anual) data.costo_anual = parseFloat(data.costo_anual);
            
            try {
                const response = await fetch('/api/policies', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                
                if (response.ok) {
                    alert('Póliza agregada exitosamente');
                    window.location.reload();
                } else {
                    const error = await response.json();
                    alert('Error: ' + (error.error || 'Error al agregar póliza'));
                }
            } catch (error) {
                alert('Error al conectar con el servidor');
            }
        });

        // Formulario de llanta
        document.getElementById('tireForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            const formData = new FormData(this);
            const data = Object.fromEntries(formData);
            
            // Convertir números
            if (data.presion_psi) data.presion_psi = parseFloat(data.presion_psi);
            if (data.profundidad_mm) data.profundidad_mm = parseFloat(data.profundidad_mm);
            if (data.kilometraje_instalacion) data.kilometraje_instalacion = parseInt(data.kilometraje_instalacion);
            if (data.costo) data.costo = parseFloat(data.costo);
            
            try {
                const response = await fetch('/api/tires', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                
                if (response.ok) {
                    alert('Llanta agregada exitosamente');
                    window.location.reload();
                } else {
                    const error = await response.json();
                    alert('Error: ' + (error.error || 'Error al agregar llanta'));
                }
            } catch (error) {
                alert('Error al conectar con el servidor');
            }
        });

    </script>
</body>
</html>
