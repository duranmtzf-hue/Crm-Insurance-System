    <script>
        // Formulario de operador
        document.getElementById('operatorForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            const formData = new FormData(this);
            const data = Object.fromEntries(formData);
            
            const submitBtn = this.querySelector('button[type="submit"]');
            const originalText = submitBtn.innerHTML;
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Guardando...';
            
            try {
                const response = await fetch('/api/operators', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });
                
                if (response.ok) {
                    alert('✅ Operador agregado exitosamente');
                    closeOperatorModal();
                    window.location.reload();
                } else {
                    const error = await response.json();
                    alert('❌ Error: ' + (error.error || 'Error al agregar operador'));
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = originalText;
                }
            } catch (error) {
                alert('❌ Error al conectar con el servidor: ' + error.message);
                submitBtn.disabled = false;
                submitBtn.innerHTML = originalText;
            }
        });

        // Cerrar modales al hacer click fuera
        window.onclick = function(event) {
            const fuelModal = document.getElementById('fuelModal');
            const maintenanceModal = document.getElementById('maintenanceModal');
            const policyModal = document.getElementById('policyModal');
            const tireModal = document.getElementById('tireModal');
            const operatorModal = document.getElementById('operatorModal');
            if (event.target == fuelModal) {
                fuelModal.style.display = 'none';
            }
            if (event.target == maintenanceModal) {
                maintenanceModal.style.display = 'none';
            }
            if (event.target == operatorModal) {
                operatorModal.style.display = 'none';
            }
            if (event.target == policyModal) {
                policyModal.style.display = 'none';
            }
            if (event.target == tireModal) {
                tireModal.style.display = 'none';
            }
        }

        // Funciones para adjuntos del vehículo
        const vehicleId = <%= vehicle.id %>;

        async function loadAttachments() {
            try {
                const response = await fetch('/api/attachments/vehicle/' + vehicleId);
                const data = await response.json();
                
                const container = document.getElementById('attachmentsList');
                if (data.success && data.attachments.length > 0) {
                    container.innerHTML = data.attachments.map(function(att) {
                        return '<div class="attachment-item" style="display: flex; justify-content: space-between; align-items: center; padding: 12px; border: 1px solid var(--border); border-radius: 6px; margin-bottom: 10px;"><div style="flex: 1;"><div style="font-weight: 600; margin-bottom: 4px;"><i class="fas fa-file"></i> ' + att.nombre_original + '</div><div style="font-size: 0.85rem; color: var(--gray);">' + (att.tamano / 1024).toFixed(2) + ' KB • ' + (att.categoria || 'otro') + ' • ' + new Date(att.created_at).toLocaleDateString('es-ES') + '</div></div><div style="display: flex; gap: 8px;"><a href="/api/attachments/' + att.id + '/download" class="btn" style="padding: 6px 12px; font-size: 0.85rem;"><i class="fas fa-download"></i></a><button onclick="deleteAttachment(' + att.id + ')" class="btn btn-danger" style="padding: 6px 12px; font-size: 0.85rem;"><i class="fas fa-trash"></i></button></div></div>';
                    }).join('');
                } else {
                    container.innerHTML = '<p class="text-muted">No hay adjuntos aún</p>';
                }
            } catch (error) {
                console.error('Error cargando adjuntos:', error);
                document.getElementById('attachmentsList').innerHTML = '<p class="text-muted">Error al cargar adjuntos</p>';
            }
        }

        async function deleteAttachment(attachmentId) {
            if (!confirm('¿Estás seguro de eliminar este adjunto?')) return;
            
            try {
                const response = await fetch(`/api/attachments/${attachmentId}`, {
                    method: 'DELETE'
                });
                
                if (response.ok) {
                    loadAttachments();
                } else {
                    alert('Error al eliminar adjunto');
                }
            } catch (error) {
                console.error('Error eliminando adjunto:', error);
                alert('Error al eliminar adjunto');
            }
        }

        // Cargar adjuntos al iniciar
        document.addEventListener('DOMContentLoaded', function() {
            loadAttachments();

            // Manejar subida de archivos
            var uploadForm = document.getElementById('uploadAttachmentForm');
            if (uploadForm) {
                uploadForm.addEventListener('submit', async function(e) {
                    e.preventDefault();
                    
                    const formData = new FormData();
                    const fileInput = document.getElementById('attachmentFile');
                    const descripcion = document.getElementById('attachmentDescription').value;
                    const categoria = document.getElementById('attachmentCategory').value;
                    
                    if (!fileInput.files[0]) {
                        alert('Por favor selecciona un archivo');
                        return;
                    }
                    
                    formData.append('file', fileInput.files[0]);
                    formData.append('entity_type', 'vehicle');
                    formData.append('entity_id', vehicleId);
                    formData.append('descripcion', descripcion);
                    formData.append('categoria', categoria);
                    
                    try {
                        const response = await fetch('/api/attachments', {
                            method: 'POST',
                            body: formData
                        });
                        
                        const data = await response.json();
                        
                        if (data.success) {
                            alert('Archivo subido exitosamente');
                            document.getElementById('uploadAttachmentForm').reset();
                            loadAttachments();
                        } else {
                            alert('Error: ' + (data.error || 'Error al subir archivo'));
                        }
                    } catch (error) {
                        console.error('Error subiendo archivo:', error);
                        alert('Error al subir archivo');
                    }
                });
            }
        });

        document.getElementById('fuelForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            const formData = new FormData(this);
            const data = Object.fromEntries(formData);
            
            // Convertir números
            data.litros = parseFloat(data.litros);
            data.precio_litro = parseFloat(data.precio_litro);
            if (data.kilometraje) data.kilometraje = parseInt(data.kilometraje);
            if (data.ruta_distancia_km !== '') data.ruta_distancia_km = parseFloat(data.ruta_distancia_km);
            if (data.ruta_tiempo_horas !== '') data.ruta_tiempo_horas = parseInt(data.ruta_tiempo_horas, 10);
            if (data.ruta_tiempo_minutos !== '') data.ruta_tiempo_minutos = parseInt(data.ruta_tiempo_minutos, 10);
            
            try {
                const response = await fetch('/api/fuel', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                
                if (response.ok) {
                    alert('Registro de combustible agregado exitosamente');
                    window.location.reload();
                } else {
                    const error = await response.json();
                    alert('Error: ' + (error.error || 'Error al agregar registro'));
                }
            } catch (error) {
                alert('Error al conectar con el servidor');
            }
        });

        document.getElementById('maintenanceForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            const formData = new FormData(this);
            const data = Object.fromEntries(formData);
            
            // Convertir números
            if (data.kilometraje) data.kilometraje = parseInt(data.kilometraje);
            if (data.costo) data.costo = parseFloat(data.costo);
            if (data.proximo_mantenimiento_km) data.proximo_mantenimiento_km = parseInt(data.proximo_mantenimiento_km);
            
            try {
                const response = await fetch('/api/maintenance', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                
                if (response.ok) {
                    alert('Mantenimiento registrado exitosamente');
                    window.location.reload();
                } else {
                    const error = await response.json();
                    alert('Error: ' + (error.error || 'Error al registrar mantenimiento'));
                }
            } catch (error) {
                alert('Error al conectar con el servidor');
            }
        });

        // Formulario de póliza
        document.getElementById('policyForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            const formData = new FormData(this);
            const data = Object.fromEntries(formData);
            
            // Convertir números
            if (data.costo_anual) data.costo_anual = parseFloat(data.costo_anual);
            
            try {
                const response = await fetch('/api/policies', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                
                if (response.ok) {
                    alert('Póliza agregada exitosamente');
                    window.location.reload();
                } else {
                    const error = await response.json();
                    alert('Error: ' + (error.error || 'Error al agregar póliza'));
                }
            } catch (error) {
                alert('Error al conectar con el servidor');
            }
        });

        // Formulario de llanta
        document.getElementById('tireForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            const formData = new FormData(this);
            const data = Object.fromEntries(formData);
            
            // Validación mejorada
            if (!data.posicion) {
                alert('⚠️ Por favor selecciona una posición');
                return;
            }
            
            // Validar presión si está ingresada
            if (data.presion_psi) {
                const presion = parseFloat(data.presion_psi);
                if (presion < 20 || presion > 50) {
                    if (!confirm('⚠️ La presión ingresada (' + presion + ' PSI) está fuera del rango típico (20-50 PSI).\n\n¿Deseas continuar de todos modos?')) {
                        return;
                    }
                }
            }
            
            // Validar profundidad si está ingresada
            if (data.profundidad_mm) {
                const profundidad = parseFloat(data.profundidad_mm);
                if (profundidad < 0 || profundidad > 20) {
                    if (!confirm('⚠️ La profundidad ingresada (' + profundidad + ' mm) está fuera del rango típico (0-20 mm).\n\n¿Deseas continuar de todos modos?')) {
                        return;
                    }
                }
                if (profundidad < 1.6) {
                    if (!confirm('⚠️ ADVERTENCIA: La profundidad (' + profundidad + ' mm) está por debajo del mínimo legal (1.6 mm).\n\n¿Estás seguro de continuar?')) {
                        return;
                    }
                }
            }
            
            // Convertir números
            if (data.presion_psi) data.presion_psi = parseFloat(data.presion_psi);
            if (data.profundidad_mm) data.profundidad_mm = parseFloat(data.profundidad_mm);
            if (data.kilometraje_instalacion) data.kilometraje_instalacion = parseInt(data.kilometraje_instalacion);
            if (data.costo) data.costo = parseFloat(data.costo);
            
            // Mostrar indicador de carga
            const submitBtn = this.querySelector('button[type="submit"]');
            const originalText = submitBtn.innerHTML;
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Guardando...';
            
            try {
                const response = await fetch('/api/tires', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                
                if (response.ok) {
                    alert('✅ Llanta agregada exitosamente');
                    closeTireModal();
                    window.location.reload();
                } else {
                    const error = await response.json();
                    alert('❌ Error: ' + (error.error || 'Error al agregar llanta'));
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = originalText;
                }
            } catch (error) {
                alert('❌ Error al conectar con el servidor: ' + error.message);
                submitBtn.disabled = false;
                submitBtn.innerHTML = originalText;
            }
        });

        // Funciones de la calculadora de costo por kilómetro
        function toggleReencauches() {
            const numReencauches = parseInt(document.getElementById('numReencauches').value) || 0;
            document.getElementById('reencauche1').style.display = numReencauches >= 1 ? 'block' : 'none';
            document.getElementById('reencauche2').style.display = numReencauches >= 2 ? 'block' : 'none';
            document.getElementById('reencauche3').style.display = numReencauches >= 3 ? 'block' : 'none';
            calcularCostoPorKm();
        }

        function calcularCostoPorKm() {
            // Obtener valores de llanta nueva
            const valorLlantaNueva = parseFloat(document.getElementById('valorLlantaNueva').value) || 0;
            const kmLlantaNueva = parseFloat(document.getElementById('kmLlantaNueva').value) || 0;
            
            // Sincronizar con el campo de costo del formulario
            const costoInput = document.getElementById('costoLlantaNueva');
            if (costoInput && valorLlantaNueva > 0) {
                costoInput.value = valorLlantaNueva;
            }
            
            // Sincronizar con el campo de kilometraje de instalación
            const kmInput = document.getElementById('kilometrajeInstalacion');
            if (kmInput && kmLlantaNueva > 0) {
                kmInput.value = kmLlantaNueva;
            }
            
            // Obtener valores de reencauches
            const numReencauches = parseInt(document.getElementById('numReencauches').value) || 0;
            let totalReencauches = 0;
            let totalKmReencauches = 0;
            
            if (numReencauches >= 1) {
                const rec1Valor = parseFloat(document.getElementById('reencauche1Valor').value) || 0;
                const rec1Km = parseFloat(document.getElementById('reencauche1Km').value) || 0;
                totalReencauches += rec1Valor;
                totalKmReencauches += rec1Km;
            }
            
            if (numReencauches >= 2) {
                const rec2Valor = parseFloat(document.getElementById('reencauche2Valor').value) || 0;
                const rec2Km = parseFloat(document.getElementById('reencauche2Km').value) || 0;
                totalReencauches += rec2Valor;
                totalKmReencauches += rec2Km;
            }
            
            if (numReencauches >= 3) {
                const rec3Valor = parseFloat(document.getElementById('reencauche3Valor').value) || 0;
                const rec3Km = parseFloat(document.getElementById('reencauche3Km').value) || 0;
                totalReencauches += rec3Valor;
                totalKmReencauches += rec3Km;
            }
            
            // Calcular totales
            const totalInversion = valorLlantaNueva + totalReencauches;
            const totalKm = kmLlantaNueva + totalKmReencauches;
            
            // Calcular costo por kilómetro
            let costoPorKm = 0;
            if (totalKm > 0) {
                costoPorKm = totalInversion / totalKm;
            }
            
            // Actualizar resultados
            document.getElementById('totalInversion').textContent = '$' + totalInversion.toLocaleString('es-ES', {minimumFractionDigits: 2, maximumFractionDigits: 2});
            document.getElementById('totalKm').textContent = totalKm.toLocaleString('es-ES');
            document.getElementById('costoPorKm').textContent = '$' + costoPorKm.toFixed(4);
            
            // Actualizar fórmula
            let formula = '(Costo de Llanta Nueva (' + valorLlantaNueva.toLocaleString('es-ES') + ')';
            if (totalReencauches > 0) {
                formula += ' + Reencauches ((' + totalReencauches.toLocaleString('es-ES') + ') = ' + totalInversion.toLocaleString('es-ES') + ')';
            } else {
                formula += ' = ' + totalInversion.toLocaleString('es-ES') + ')';
            }
            formula += ' / Kilómetros de la Llanta Nueva (' + kmLlantaNueva.toLocaleString('es-ES') + ')';
            if (totalKmReencauches > 0) {
                formula += ' + Reencauches ((' + totalKmReencauches.toLocaleString('es-ES') + ') = ' + totalKm.toLocaleString('es-ES') + ')';
            }
            formula += ')';
            
            document.getElementById('formulaCostoKm').textContent = formula;
        }

        // Sincronizar campos cuando se abre el modal de llantas
        const tireForm = document.getElementById('tireForm');
        if (tireForm) {
            tireForm.addEventListener('focusin', function(e) {
                if (e.target.name === 'costo' || e.target.name === 'kilometraje_instalacion') {
                    setTimeout(function() {
                        const costoInput = document.getElementById('costoLlantaNueva');
                        const kmInput = document.getElementById('kilometrajeInstalacion');
                        if (costoInput && costoInput.value) {
                            document.getElementById('valorLlantaNueva').value = costoInput.value;
                        }
                        if (kmInput && kmInput.value) {
                            document.getElementById('kmLlantaNueva').value = kmInput.value;
                        }
                        calcularCostoPorKm();
                    }, 100);
                }
            });
        }

        // Funciones del modal de llantas
        function openTireModal() {
            const modal = document.getElementById('tireModal');
            modal.style.display = 'block';
            
            // Auto-llenar valores inteligentes
            setTimeout(() => {
                // Fecha de hoy si no está establecida
                const fechaInput = document.getElementById('fechaInstalacionInput');
                if (fechaInput && !fechaInput.value) {
                    fechaInput.value = new Date().toISOString().split('T')[0];
                }
                
                // Kilometraje actual si está vacío
                const kmInput = document.getElementById('kilometrajeInstalacion');
                const currentKm = <%= vehicle.kilometraje_actual || 0 %>;
                if (kmInput && !kmInput.value && currentKm > 0) {
                    kmInput.value = currentKm;
                    const kmCalc = document.getElementById('kmLlantaNueva');
                    if (kmCalc) kmCalc.value = currentKm;
                }
                
                // Valores por defecto recomendados
                if (!document.getElementById('presionInput').value) {
                    document.getElementById('presionInput').value = 32;
                }
                if (!document.getElementById('profundidadInput').value) {
                    document.getElementById('profundidadInput').value = 8.5;
                }
                
                calcularCostoPorKm();
            }, 100);
        }

        function closeTireModal() {
            const modal = document.getElementById('tireModal');
            modal.style.display = 'none';
            document.getElementById('tireForm').reset();
            // Restablecer valores por defecto
            document.getElementById('fechaInstalacionInput').value = '<%= new Date().toISOString().split('T')[0] %>';
            document.getElementById('kilometrajeInstalacion').value = '<%= vehicle.kilometraje_actual || '' %>';
            document.getElementById('presionInput').value = '32';
            document.getElementById('profundidadInput').value = '8.5';
        }

        // Funciones para el modal de operador
        function openOperatorModal() {
            const modal = document.getElementById('operatorModal');
            modal.style.display = 'block';
        }

        function closeOperatorModal() {
            const modal = document.getElementById('operatorModal');
            modal.style.display = 'none';
            document.getElementById('operatorForm').reset();
        }

        // Funciones para el llenado rápido de posiciones
        function toggleQuickFill() {
            const panel = document.getElementById('quickFillPanel');
            if (panel.style.display === 'none' || !panel.style.display) {
                panel.style.display = 'block';
            } else {
                panel.style.display = 'none';
            }
        }

        function updatePositionFromCheckbox() {
            const checkboxes = document.querySelectorAll('.position-checkbox:checked');
            if (checkboxes.length === 1) {
                // Si solo hay una seleccionada, actualizar el select
                document.getElementById('posicionSelect').value = checkboxes[0].value;
            }
        }

        function selectAllPositions() {
            const checkboxes = document.querySelectorAll('.position-checkbox');
            checkboxes.forEach(cb => cb.checked = true);
        }

        function clearAllPositions() {
            const checkboxes = document.querySelectorAll('.position-checkbox');
            checkboxes.forEach(cb => cb.checked = false);
            document.getElementById('posicionSelect').value = '';
        }

        function applySelectedPosition() {
            const checkboxes = document.querySelectorAll('.position-checkbox:checked');
            if (checkboxes.length === 0) {
                alert('Por favor selecciona al menos una posición');
                return;
            }
            if (checkboxes.length === 1) {
                // Si solo hay una, aplicar directamente
                document.getElementById('posicionSelect').value = checkboxes[0].value;
                document.getElementById('quickFillPanel').style.display = 'none';
                checkPositionDuplicate();
            } else {
                // Si hay múltiples, usar la primera
                document.getElementById('posicionSelect').value = checkboxes[0].value;
                alert('Se aplicó la primera posición seleccionada. Para múltiples llantas, agrega una por una.');
                document.getElementById('quickFillPanel').style.display = 'none';
                checkPositionDuplicate();
            }
        }

        // Funciones de automatización
        function copyFromLastTire() {
            <% if (tires && tires.length > 0) { %>
            const lastTire = {
                marca: '<%= (tires[0].marca || "").replace(/'/g, "\\'") %>',
                modelo: '<%= (tires[0].modelo || "").replace(/'/g, "\\'") %>',
                medida: '<%= (tires[0].medida || "").replace(/'/g, "\\'") %>',
                presion_psi: <%= tires[0].presion_psi || 'null' %>,
                profundidad_mm: <%= tires[0].profundidad_mm || 'null' %>,
                costo: <%= tires[0].costo || 'null' %>
            };
            
            if (lastTire.marca) document.getElementById('marcaInput').value = lastTire.marca;
            if (lastTire.modelo) document.getElementById('modeloInput').value = lastTire.modelo;
            if (lastTire.medida) document.getElementById('medidaInput').value = lastTire.medida;
            if (lastTire.presion_psi) document.getElementById('presionInput').value = lastTire.presion_psi;
            if (lastTire.profundidad_mm) document.getElementById('profundidadInput').value = lastTire.profundidad_mm;
            if (lastTire.costo) {
                document.getElementById('costoLlantaNueva').value = lastTire.costo;
                document.getElementById('valorLlantaNueva').value = lastTire.costo;
                calcularCostoPorKm();
            }
            
            alert('✅ Datos copiados de la última llanta agregada');
            <% } else { %>
            alert('No hay llantas previas para copiar');
            <% } %>
        }

        function setDefaultPressure() {
            document.getElementById('presionInput').value = 32;
        }

        function setDefaultDepth() {
            document.getElementById('profundidadInput').value = 8.5;
        }

        function setCurrentKilometraje() {
            const currentKm = <%= vehicle.kilometraje_actual || 0 %>;
            if (currentKm > 0) {
                document.getElementById('kilometrajeInstalacion').value = currentKm;
                document.getElementById('kmLlantaNueva').value = currentKm;
                calcularCostoPorKm();
            } else {
                alert('El vehículo no tiene kilometraje registrado');
            }
        }

        // Verificar si la posición ya está ocupada
        function checkPositionDuplicate() {
            const selectedPosition = document.getElementById('posicionSelect').value;
            if (!selectedPosition) return;
            
            <% if (tires && tires.length > 0) { %>
            const occupiedPositions = [
                <% tires.forEach(function(tire, index) { %>
                '<%= tire.posicion.replace(/'/g, "\\'") %>'<%= index < tires.length - 1 ? ',' : '' %>
                <% }); %>
            ];
            
            if (occupiedPositions.includes(selectedPosition)) {
                const confirmReplace = confirm(`⚠️ Ya existe una llanta en la posición "${selectedPosition}".\n\n¿Deseas continuar de todos modos?`);
                if (!confirmReplace) {
                    document.getElementById('posicionSelect').value = '';
                }
            }
            <% } %>
        }

        // Agregar listener para verificar duplicados al cambiar posición
        document.getElementById('posicionSelect').addEventListener('change', checkPositionDuplicate);

        // Funciones para el modal de imagen
        function openImageModal(imagePath, imageName, description) {
            const modal = document.getElementById('imageViewModal');
            const img = document.getElementById('imageViewImg');
            const name = document.getElementById('imageViewName');
            const desc = document.getElementById('imageViewDesc');
            
            img.src = imagePath;
            img.alt = imageName;
            name.textContent = imageName;
            desc.textContent = description || 'Sin descripción';
            desc.style.display = description ? 'block' : 'none';
            
            modal.style.display = 'block';
            document.body.style.overflow = 'hidden';
        }

        function closeImageModal() {
            const modal = document.getElementById('imageViewModal');
            modal.style.display = 'none';
            document.body.style.overflow = 'auto';
        }

        // Cerrar modal con ESC
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeImageModal();
            }
        });

        // Cerrar modal al hacer click fuera de la imagen
        document.getElementById('imageViewModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeImageModal();
            }
        });

    </script>

    <!-- Modal para ver imagen en grande -->
    <div id="imageViewModal" class="image-modal">
        <button class="image-modal-close" onclick="closeImageModal()">
            <i class="fas fa-times"></i>
        </button>
        <div class="image-modal-content">
            <img id="imageViewImg" src="" alt="">
            <div class="image-modal-info">
                <h3 id="imageViewName" style="margin: 0 0 10px 0; font-size: 1.2rem;"></h3>
                <p id="imageViewDesc" style="margin: 0; opacity: 0.9; font-size: 0.95rem;"></p>
            </div>
        </div>
    </div>
